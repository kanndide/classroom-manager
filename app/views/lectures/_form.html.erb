<%= form_for @lecture do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br>
	<%= f.label :time %>
	<%= f.text_field :time %><br>
	<%= f.label :day %>
	<%= f.text_field :day %><br>
	<%= f.label :semester %>
	<%= f.text_field :semester %><br>
	<%= f.label "Please choose a school for this lecture:" %><br>
	<%= f.collection_select(:school_id, @schools, :id, :name) %><br>
	<%= f.label "Select Year" %>
	<%= f.select :year, (Time.zone.now.year)..(Time.zone.now.year + 1) %>
	<%= f.submit %>
<% end %>
