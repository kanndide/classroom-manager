<%= form_for @school do |f| %>
	
	<% if @school.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(@school.errors.count, "error") %>
	      prohibited this post from being saved:
	    </h2>
	 
	    <ul>
	    <% @school.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.submit %>
<% end %>