<%= bootstrap_form_for @user, layout: :inline do |f| %>

	<% if @user.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(@user.errors.count, "error") %>
	      prohibited this post from being saved:
	    </h2>
	 
	    <ul>
	    <% @user.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= f.text_field :first_name, :required => true %><br>
	<br>
	<%= f.text_field :last_name, :required => true %><br>
	<br>
	<%= f.text_field :email, :required => true %><br>
	<br>
	<%= f.text_area :bio, rows: '7' %><br>
	<br>

	<% if current_user.admin %>
		<%= f.check_box :teacher %><br>
		<br>
		<%= f.check_box :admin %><br>
		<br>
	<% end %>

	<%= f.submit "Update Profile", class: 'btn-primary btn-md' %>
<% end %>
