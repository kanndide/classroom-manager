<%= bootstrap_form_for @user, layout: :inline do |f| %>

	<%= render 'errors' %>

	<%= f.text_field :username %><br>
	<br>
	<%= f.password_field :password %><br>
	<br>
	<%= f.password_field :password_confirmation, label: "Confirm Password" %><br>
	<br>
	<% if current_user != nil %>
		<%= f.submit 'Update Password', class: 'btn-primary btn-md' %>
	<% else %>
		<%= f.submit 'Submit', class: 'btn-primary btn-lg' %>
	<% end %>
<% end %>