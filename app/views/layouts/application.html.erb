<!DOCTYPE html>
<html>
  <head>
    <title>ClassroomManager</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'shared/navigation' %>
    
    <div class="container-fluid text-center"> 

      <div class="row">
        <div class="col-xs-12">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
          <% end -%>
        </div>
      </div>
   
      <% if !!@user %>   
        <% if current_user.id == params[:id].to_i || current_user.admin  %>
          <div class="col-sm-2 sidenav">
            <p><a href="#">View Schedule</a></p>
            <p><%= link_to "Edit Profile", edit_user_path(User.find(params[:id])) %></p>
            <p><a href="#">Delete Account</a></p>
          </div>
        <% end %>
      <% end %>
      
      <div class="col-sm-8 text-left"> 
        <%= yield %>
      </div>

      <div class="col-sm-2 sidenav">
        <div class="well">
          <p>Where am I at?</p>
        </div>
        <div class="well">
          <p>Where am I at, number 1?</p>
        </div>
        
      </div>
    </div> <!-- Caontainer end -->
  </body>
</html>
