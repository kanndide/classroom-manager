<%= bootstrap_form_for @lecture, layout: :inline do |f| %>

	<%= f.text_field :name %><br>
	<br>				
	<%= f.text_field :time %><br>
	<br>	
	<%= f.text_field :day %><br>
	<br>
	<%= f.text_field :semester %><br>
	<br>
	<%= f.text_field :location %><br>
	<br>
	<%= f.collection_select(:school_id, @schools, :id, :name)%><br>
	<br>	
	<%= f.select :year, (Time.zone.now.year)..(Time.zone.now.year + 1), label: "Select Year" %><br>
	<br>
	<%= f.submit class: 'btn-primary btn-lg', id: 'newLectureFormButton' %><br>
	<br>

<% end %>
